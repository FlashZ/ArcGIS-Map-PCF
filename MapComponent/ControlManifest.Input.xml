<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="ARCGISMapPCF" constructor="MapComponent" version="0.0.3" display-name-key="MapComponent" description-key="MapComponent description" control-type="standard">
    <external-service-usage enabled="true">
      <domain>www.arcgis.com</domain>
    </external-service-usage>
    <property name="clientId" display-name-key="Client ID" description-key="ArcGIS Client ID for authentication" of-type="SingleLine.Text" usage="input" required="true" />
    <property name="portalUrl" display-name-key="Portal URL" description-key="ArcGIS Portal URL" of-type="SingleLine.Text" usage="input" required="true" />
    <property name="webMapId" display-name-key="Web Map ID" description-key="ID of the ArcGIS Web Map to display" of-type="SingleLine.Text" usage="input" required="true" />
    <property name="projectionType" display-name-key="Projection Type" description-key="Type of projection to use for the map" of-type="Whole.None" usage="input" required="false"/>
    <property name="lookupLayerId" display-name-key="Lookup Layer ID" description-key="ID of the layer to perform lookups on" of-type="SingleLine.Text" usage="input" required="false" />
    <property name="lookupFieldName" display-name-key="Lookup Field Name" description-key="Name of the field to perform lookups on" of-type="SingleLine.Text" usage="input" required="false" />
    <property name="lookupFieldValue" display-name-key="Lookup Field Value" description-key="Value of the field to perform lookups on" of-type="SingleLine.Text" usage="input" required="false" />
    <property name="logoUrl" display-name-key="Logo URL" description-key="URL of the logo image to display" of-type="SingleLine.Text" usage="input" required="false" />
    <resources>
      <code path="index.ts" order="1"/>
      <css path="styles.css" order="1" />
    </resources>
  </control>
</manifest>
